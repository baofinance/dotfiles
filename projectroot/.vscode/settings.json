{
  // project specific formatting, so try and align with prettierrc
  "prettier.documentSelectors": ["**/*.sol", "**/*.ts", "**/*.json", "**/*.yml"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "explorer.autoReveal": false,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "search.exclude": {
    "**/node_modules": true
  },
  // csv file handling
  "[csv][dynamic csv][tsv][csv (semicolon)]": {
    "editor.stickyScroll.enabled": true
  },
  // gnuplot
  "gnuplot.watcher.delay": 1000,

  "[solidity]": {
    "editor.tabSize": 4
  },
  "[yaml]": {
    "editor.tabSize": 2
  },

  // extension: https://marketplace.visualstudio.com/items?itemName=markis.code-coverage
  "markiscodecoverage.coverageThreshold": 90,
  "markiscodecoverage.searchCriteria": "lcov*.info",
  "workbench.colorCustomizations": {
    "markiscodecoverage.colorUncoveredLineText": "#00000000",
    "markiscodecoverage.insufficientCoverageForeground": "#1594E9FF"
  },

  // extension: https://marketplace.visualstudio.com/items?itemName=AckeeBlockchain.tools-for-solidity
  "wake.compiler.solc.remappings": [
    "ds-test/=lib/forge-std/lib/ds-test/src/",
    "forge-std/=lib/forge-std/src/",
    "@openzeppelin/contracts/=lib/openzeppelin-contracts-upgradeable/lib/openzeppelin-contracts/contracts/",
    "@openzeppelin/contracts-upgradeable/=lib/openzeppelin-contracts-upgradeable/contracts/",
    "@solady/=lib/solady/src/",
    "@bao/=lib/baobase/src/",
    "openzeppelin-foundry-upgrades/=lib/openzeppelin-foundry-upgrades/src/",
    "solidity-stringutils/=lib/openzeppelin-foundry-upgrades/lib/solidity-stringutils/",
    "src/=src/",
    "test/=test/"
  ]
}
